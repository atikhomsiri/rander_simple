<%- include('_userheader') %>

<% JSON.stringify(data) %>

<h1> ESP01 Device </h1>

    <div class="container text-left">
        <div class="row row-cols-2">
          <div class="col">Hardware Name : <%= data.hwname %></div>
          <div class="col">Mac Address : <%= data.mac %></div>
          <div class="col">Site : <%= data.sitename %></div>
          <div class="col">Add Date : <%= data.adddate.toLocaleDateString() %></div>
          <div class="col">Room : <%= data.roomname %></div>
            <div class="col">FW Version : <%= data.version %> 
                <% if(data.max>data.version) {%> <a href="/user/iot/deviceupdate/<%= data.did %>" class="btn btn-warning"> Update </a> <% } %> 
            </div>
          <div class="col"></div>
          </div>
      </div>
      <div class="row">
        <div class="col-sm-10 ">

<% if(iotdata!=null){ %>
    <% if(iotdata<0){%> 
        <div class="card bg-success text-white mx-auto" style="width: 20rem;"><div class="card-body"> 
            ESP01 Node <p> <h3> Status : ONLINE (<%= iotdata %>)
        </h2></p> </div></div> <br>
    </div>
        
    <% }%> 
    
<% }else{ %> 
    <div class="card bg-secondary text-white mx-auto" style="width: 16rem;"><div class="card-body"> 
        ESP01 Node <p> <h3> Status : OFFLINE 
    </h2></p> </div></div> <br>
</div>
    
<% } %> 

</div>
<BR>
<div class="text-center"> <a href="/user/owner" class="btn btn-danger"> Back </a>  </div>
        
<%- include ('_userfooter') %>