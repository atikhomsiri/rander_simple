<table class="table table-responsive mx-auto text-center" >
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Date Time </th>
        <th scope="col">PM 2.5</th>
      </tr>
  </thead>
  <tbody>
      <% if(data){ for(var i=pm25data.length-2;i>=0;i--){ %>
        <tr>
            <td> <%= (pm25data.length-i-1) %> </td>
            
            <% var startTime = new Date(pm25time[i]); %> 
            
            <td> <%= startTime.toDateString() %> <%= startTime.toTimeString().substring(0, 8) %>  </td>  
            <td> <%= pm25data[i].toFixed(2) %>  </td>        
            
        </tr>
    <%  } } %>


    </thead>
  </tbody>
</table>

