    <div class="container text-left">
        <div class="row row-cols-2">
          <div class="col">Hardware Name : <%= data.hwname %></div>
         
          <div class="col">Mac Address : <%= data.mac %></div>
          
          <div class="col">Site : <%= data.sitename %></div>
          
          <div class="col">Add Date : <%= data.adddate.toLocaleDateString() %></div>
          <div class="col">Room : <%= data.roomname %></div>
          <div class="col"></div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-10 ">





<BR>
    <div class="container text-center"> <div class="row row-cols-3">
<div class="text-center"> <a href="/user/iot/<%= data.datapoint %>/day/<%= data.did %>" class="btn btn-info" style=" height:40px;width:200px;"> Day </a>  </div>
<div  class="text-center"> <a href="/user/iot/<%= data.datapoint %>/week/<%= data.did %>" class="btn btn-info" style=" height:40px;width:200px;"> Week </a>  </div>
