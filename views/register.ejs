<%- include('_header') %>

<% JSON.stringify(data) %>

<h1> Register </h1>
<table class="table table-responsive mx-auto" >
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Register Date</th>
        <th scope="col">Comment</th>
        <th scope="col">Action</th>
        <th scope="col">  <a href="/register/add" class="btn btn-primary"> Add </a>  </th>
      </tr>
    </thead>
    <tbody>
        <% if(data){ for(var i=0;i<data.length;i++){ %>
            <tr>
                <td> <%= (i+1) %> </td>
                <td> <%= data[i].name %> </td>
                <td> <%= data[i].email %> </td>
                <td> <%= data[i].phone %> </td>
                <td> <%= data[i].registerdate.toLocaleDateString('el-GR') %> </td>
                <td> <%= data[i].comment %> </td>
                <td>  
                  <form method="GET" action="/register/delete/<%= data[i].rid %>"  onsubmit="return submitForm(this);">  <input class="btn btn-danger" type="submit" value="Del"/> </form>
                </td>
                <td>  
               
                <a href="/register/edit/<%= data[i].rid %>" class="btn btn-info"> Edit </a>
                
                <% if(!data[i].uid){ %> <a href="/user/new/<%= data[i].rid %>" class="btn btn-success"> Admit </a> <% } %>
                </td>
            </tr>
        <%  } } %>
    </tbody>
</table>
<%- include ('_footer') %>