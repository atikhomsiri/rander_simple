<%- include('_header') %>

<% JSON.stringify(data) %>
<h1> User </h1>
<table class="table table-responsive mx-auto" >
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Register Date</th>
        <th scope="col">Commit Date</th>
        <th scope="col">Comment</th>
        <th scope="col"> Action</th>
       
        <th scope="col">  <a href="/register/" class="btn btn-primary">Add </a> </th>
      </tr>
    </thead>
    <tbody>
        <% if(data){ for(var i=0;i<data.length;i++){ %>
            <tr>
                <td> <%= (i+1) %> </td>
                <td> <%= data[i].name %> </td>
                <td> <%= data[i].email %> </td>
                <td> <%= data[i].phone %> </td>
                <td> <%= data[i].registerdate.toLocaleDateString('el-GR') %> </td>
                <td> <%= data[i].commitdate.toLocaleDateString('el-GR') %> </td>
                <td> <%= data[i].ucomment %> </td>
                <td>  
                  <form method="GET" action="/user/delete/<%= data[i].uid %>"  onsubmit="return submitForm(this);">  <input class="btn btn-danger" type="submit" value="Del"/> </form>
                </td>
                <td>  
               
                <a href="/site/find/<%= data[i].uid %>" class="btn btn-success"> Site </a>
                </td>
            </tr>
        <%  } } %>
    </tbody>
</table>
<%- include ('_footer') %>